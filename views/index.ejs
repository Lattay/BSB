<!DOCTYPE html>
<html lang="fr">
<head>
  <title>Bit Spill Box</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link rel="stylesheet" href="/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="/css/custom.css"/>
  <script type="text/javascript" source="/js/index.js"></script>
</head>
<body>

<div class="text-center headbar bandeau">
  <h1>Bit Spill Box</h1>
  <p>RÃ©pandre l'information</p> 
</div>
  
<div class="container">
  <% if(admin){ %>
    <a href="/admin/document/new" class="btn">Ajouter un document</a>
  <% } %>
  <div class="row" id="main_row">
    <% for(var i in rows){%>
      <div id="item_<%= rows[i].id %>" class="col-sm-3 item">
        <% if(admin){ %>
          <a href="/admin/document/<%= rows[i].id %>">
        <% } else { %>
          <a href="/document/<%= rows[i].id %>">
        <% } %>
            <img class="thumb img-rounded" src="<%= rows[i].thumbnail %>"></img>
            <div class="well">
              <%= rows[i].title %>
            </div>
          </a>
        <% if(admin){ %>
          <input type=button onclick="delete(<%= rows[i].id %>)" class="btn">Supprimer</input>
        <% } %>
      </div>
    <% } %>

  </div>
</div>

<div class="panel-footer footer text-center">
  <div class="row" id="main_row">
    <div class="col-sm-4">
        <img src="/pictures/logo_ecl.png" style="width : 60%"/>
    </div>
    <div class="col-sm-4">
        <img src="/pictures/logo_fl.png" style="width : 40%"/>
    </div>
    <div class="col-sm-4">
        <img src="/pictures/logo_bms.png" style="width : 50%"/>
    </div>
    </div>
  </div>
</body>
<% if(admin){ %>
<script>
function delete(id){
    $.ajax('/admin/rm/' + id.toString(), {'method' : 'DELETE'});
    $('item_' + id.toString()).remove();
}
</script>
<% } %>
</html>
